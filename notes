//completed code
let firstCard = 10
let secondCard = 11
let sum = firstCard + secondCard
let hasBlackJack = false
                 
if (sum <= 20) {
    console.log("Do you want to draw a new card? ðŸ™‚")
} else if (sum === 21) {
    console.log("Wohoo! You've got Blackjack! ðŸ¥³")
    hasBlackJack = true
} else {
    console.log("You're out of the game! ðŸ˜­")
}
